<h1>LISTE DES ÉLÈVES</h1>

<%= flash[:success] %><br><br>

<table>
  <thead>
    <tr>
      <th>Prénom</th>
      <th>Nom</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= link_to "Éditer", edit_student_path(student.id) %></td>
        <td><%= link_to 'Delete', student_path(student.id), method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
