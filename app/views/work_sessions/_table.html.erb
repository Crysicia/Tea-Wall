<h1>Liste des séances</h1>

<%= flash[:success] %><br><br>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Nom</th>
    </tr>
  </thead>
  <tbody>
    <%@work_sessions.each do |work_session|%>
    <tr>
      <td><%=work_session.date.strftime("%d %b %Y at %l:%M")%></td>
      <td><%=work_session.title%></td>
      <td><%= link_to "Éditer", edit_work_session_path(work_session.id) %></td>
      <td><%= link_to 'Delete', work_session_path(work_session.id), method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %></td>
    </tr>
    <%end%>
  </tbody>
</table>
